@model DLL.Models.User

@{
    ViewData["Title"] = "Quen Mat Khau";
}
<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">@ViewData["Title"]</h3></div>
                    <div class="card-body">
                        <div class="small mb-3 text-muted">Enter your email address and we will send you a link to reset your password.</div>
                        <form asp-action="ForgotPassword" method="post">
                            <div class="form-floating mb-3">
                                <input class="form-control" asp-for="Email" name="email" type="email" placeholder="name@example.com" required />
                                <label for="inputEmail">Địa chỉ email</label>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                <a class="small" asp-action="Login">Quay lại đăng nhập</a>
                                <button type="submit" class="btn btn-primary">Gửi liên kết</button>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                @if (ViewData["erroemail"] != null)
                                {
                                    <div class="alert alert-danger col-12">
                                        @ViewData["erroemail"]
                                    </div>
                                }
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a asp-action="DangKY">Need an account? Sign up!</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>